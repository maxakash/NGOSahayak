<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ngo_details"
    android:orientation="vertical"
    android:backgroundTint="#dcdcdc"

    android:gravity="center_horizontal"
   >




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardElevation="5dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card"
                android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aname"
            android:layout_gravity="start"
            android:text="Kohli Foundation"

            android:textColor="#000"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aemail"
            android:layout_gravity="start"
            android:text="kohlifoundation@gmail.com"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aphone"
            android:text="8171838434"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/aaddress"
            android:layout_gravity="start"
            android:text="HIG-566,Awas Vikas 1,Bulandshahr"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:textSize="20dp"
            android:onClick="verify"
            android:layout_marginTop="30dp"
            android:textColor="#fff"
            android:backgroundTint="@color/colorAccent"/>






</LinearLayout>